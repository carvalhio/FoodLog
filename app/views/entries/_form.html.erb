<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div class="message is-danger">
      <div class="message-header">
        <p>Erro</p>
      </div class="message-body">
      <div>
        <ul>
          <% entry.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :Tipo_de_refeição, class:"label" %>
    <%= form.text_field :meal_type, class: "input" %>
  </div>

  <div>
    <%= form.label :Calorias, class:"label" %>
    <%= form.number_field :calories, class: "input" %>
  </div>

  <div>
    <%= form.label :Proteinas, class:"label" %>
    <%= form.number_field :proteins, class: "input" %>
  </div>

  <div>
    <%= form.label :Carboidratos, class:"label" %>
    <%= form.number_field :carbohydrates, class: "input" %>
  </div>

  <div>
    <%= form.label :Gorduras, class:"label" %>
    <%= form.number_field :fats, class: "input" %>
  </div>

  <div>
    <br/>
    <%= form.submit class:"button is-link" %>
  </div>
<% end %>
