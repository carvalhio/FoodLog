<% content_for :title do %>
  Foodlog &ndash; <%= Time.now.strftime("%d-%m-%Y") %>
<% end %>

  <div class="columns mt-6 is-centered"> 
   <% @entries.each do |entry| %>
      <div class="column is-one-quarter">
        <div class="card">
          <header class="card-header">
            <p class="card-header-title"><%= entry.meal_type %> - <%= entry.category.title if entry.category.present? %></p>
          </header>
          <div class="card-content">
            <div class="content">
              <p><span class="has-text-weight-bold"><%= entry.calories %> calorias</span></p>
              <p><span class="has-text-weight-bold"><%= entry.proteins %>
                gramas de proteínas
              </span></p>
              <p><span class="has-text-weight-bold"><%= entry.carbohydrates %>
                gramas de carboidratos
              </span></p>
              <p><span class="has-text-weight-bold"><%= entry.fats %>
                gramas de gordura
              </span></p>
              <p class="italic"> Logado <%= time_ago_in_words(entry.created_at) %> atrás</p>
            </div>
          </div>       

          <div class="card-footer">
            <%= link_to 'Exibir', entry, class:"card-footer-item" %>
            <%= link_to 'Editar', edit_entry_path(entry), class:"card-footer-item" %>
            <%= link_to 'Deletar', entry, method: :delete, data: { confirm: 'Tem certeza?'}, class:"card-footer-item" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="columns is-centered mt-6">
    <%= link_to "Todas as refeições", archives_index_path, class: "button is-link is-outlined is is-centered" %>
  </div>